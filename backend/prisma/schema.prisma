// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  applications      Application[]
  contacts          Contact[]
  documents         Document[]
  emailTemplates    EmailTemplate[]
  interviewQuestions InterviewQuestion[]
}

model Application {
  id              String   @id @default(uuid())
  userId          String
  company         String
  position        String
  location        String?
  jobDescription  String?
  status          ApplicationStatus @default(APPLIED)
  applicationDate DateTime @default(now())
  salary          String?
  jobUrl          String?
  notes           String?
  source          String?  // LinkedIn, Indeed, Company Site, Referral, etc.
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  contacts        Contact[]
  documents       Document[]
  interviews      Interview[]
  
  @@index([userId])
  @@index([status])
}

enum ApplicationStatus {
  SAVED
  APPLIED
  SCREENING
  INTERVIEW
  OFFER
  ACCEPTED
  REJECTED
  WITHDRAWN
}

model Contact {
  id            String   @id @default(uuid())
  userId        String
  applicationId String?
  name          String
  company       String?
  role          String?
  email         String?
  phone         String?
  linkedin      String?
  notes         String?
  relationship  String?  // Recruiter, Hiring Manager, Referral, etc.
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  application   Application? @relation(fields: [applicationId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([applicationId])
}

model Document {
  id            String   @id @default(uuid())
  userId        String
  applicationId String?
  name          String
  type          DocumentType
  fileUrl       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  application   Application? @relation(fields: [applicationId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([applicationId])
}

enum DocumentType {
  RESUME
  COVER_LETTER
  PORTFOLIO
  REFERENCE
  OTHER
}

model EmailTemplate {
  id        String   @id @default(uuid())
  userId    String
  name      String
  subject   String?
  body      String
  type      EmailType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

enum EmailType {
  THANK_YOU
  FOLLOW_UP
  NETWORKING
  ACCEPTANCE
  DECLINE
  OTHER
}

model InterviewQuestion {
  id          String   @id @default(uuid())
  userId      String
  company     String?
  question    String
  answer      String?
  tags        String[] // e.g., ["behavioral", "technical", "system-design"]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model Interview {
  id            String   @id @default(uuid())
  applicationId String
  type          InterviewType
  scheduledAt   DateTime
  duration      Int?     // in minutes
  location      String?  // Physical address or video link
  interviewers  String[] // Array of interviewer names
  notes         String?
  completed     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  
  @@index([applicationId])
}

enum InterviewType {
  PHONE_SCREEN
  VIDEO
  ONSITE
  TECHNICAL
  BEHAVIORAL
  PANEL
  OTHER
}
